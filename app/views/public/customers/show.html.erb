<div class="l-main_container">
  <h2 class="product_title head-line shadow">マイページ</h2>
  <div class="cutomer-edit_subtitle">
    <h3 class="cutomer-edit_subtitle_text">登録情報</h3>
    <%= link_to "編集する", edit_customers_path, class: "customer-edit_btn" %>
  </div>
  <table class="cutomer-edit_table">
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.post_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.tel %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>
  <div class="cutomer-edit_subtitle">
  <h3 class="cutomer-edit_subtitle_text">配達先</h3>
  <%= link_to "一覧を見る", deliveries_path, class: "customer-edit_btn" %>
</div>
<div class="cutomer-edit_subtitle">
  <h3 class="cutomer-edit_subtitle_text">注文履歴</h3>
  <%= link_to "一覧を見る", orders_path, class: "customer-edit_btn" %>
</div>
</div>

<div class="l-main_container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-11">

      <h2 class="head-line text-left">新規会員登録</h2></br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field form-group col-sm-12">
          <%= f.label :"名前", class: "col-sm-2 control-label" %>
          <%= f.label :"(姓)", class: "col-sm-2 control-label" %>
          <%= f.text_field :last_name, autofocus: true, class:"col-sm-2 form-control-static name" %>
          <%= f.label :"(名)", class: "col-sm-2 control-label" %>
          <%= f.text_field :first_name, autofocus: true, class:"col-sm-2 form-control-static name"%>
        </div>

        <div class="field form-group col-xs-12">
          <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
          <%= f.label :"(セイ)", class: "col-sm-2 control-label" %>
          <%= f.text_field :last_name, autofocus: true, class:"col-sm-2 form-control-static name" %>
          <%= f.label :"(メイ)", class: "col-sm-2 control-label" %>
          <%= f.text_field :first_name, autofocus: true, class:"col-sm-2 form-control-static name"%>
        </div>

        <div class="field form-group col-xs-12">
          <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-sm-3 form-control-static" %>
        </div>

        <div class="field form-group col-xs-12">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-4 control-label" %>
          <%= f.text_field :post_code, autofocus: true, class:"col-sm-3 form-control-static" %>
        </div>

        <div class="field form-group col-xs-12">
          <%= f.label :"住所", class: "col-sm-4 control-label" %>
          <%= f.text_field :address, autofocus: true, class:"col-sm-7 form-control-static" %>
        </div>

        <div class="field form-group col-xs-12">
          <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-4 control-label" %>
          <%= f.telephone_field :tel, autofocus: true, class:"col-sm-4 form-control-static" %>
        </div>

        <div class="field form-group col-xs-9">
          <%= f.label :"パスワード(6文字以上)", class: "col-sm-4 control-label" %>
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
        </div>

        <div class="field form-group col-xs-9">
          <%= f.label :"パスワード確認用", class: "col-sm-4 control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
        </div>

        <div class="actions col-4 mx-auto">
          <%= f.submit "新規登録", class: "btn btn-success col-sm-11" %>
        </div>
      <% end %>

      <div>
        <h3 class="head-line text-left">既に登録済みの方</h3>
        <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
      </div>
    </div>
  </div>
</div>
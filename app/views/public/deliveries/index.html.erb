<div class="l-main_container">

<div>配送先登録/一覧</div>
  <div class="col-xs-11 col-xs-offset-1">
    <div classs="row">
      <%= form_with model: @delivery, url: public_deliveries_path, local: true do |f| %>
        <div class="field form-group col-sm-6">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-3 control-label" %>
          <%= f.text_field :post_code, autofocus: true, class:"col-sm-2 form-control-static" %>
        </div>

        <div class="field form-group col-sm-6">
          <%= f.label :"住所", class: "col-sm-3 control-label" %>
          <%= f.text_field :address, autofocus: true, class:"col-sm-5 form-control-static" %>
        </div>

        <div class="field form-group col-sm-6">
          <%= f.label :"宛名", class: "col-sm-3 control-label" %>
          <%= f.text_field :name, autofocus: true, class:"col-sm-2 form-control-static name" %>
          <div class= text-right><%= f.submit "新規登録", class: "btn btn-success col-sm-2" %></div>
        </div>
      <% end %>

      <table class="table table-bordered col-sm-6">
        <thead>
          <tr>
            <td>郵便番号</td>
            <td>住所</td>
            <td>宛名</td>
          </tr>
          <% @deliverys.each do |delivery| %>
          <tr>
              <td><%= delivery.post_code %></td>
              <td><%= delivery.address %></td>
              <td><%= delivery.name %></td>
              <td>
                <%= link_to "編集する", edit_public_delivery_path(delivery), class: "btn btn-success" %>
                <%= link_to "削除する", public_delivery_path(delivery), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
              </td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
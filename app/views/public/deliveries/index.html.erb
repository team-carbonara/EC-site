<div class="l-main_container">
  <div classs="row">
    <div class="offset-1 col-md-4">
      <div class="shadow p-1 mb-5 col-md-3 bg-light rounded-lg head-line text-center">配送先登録/一覧</div>
        <table class="table table-borderless">

        <tbody>
          <%= form_with model: @delivery, local: true do |f| %>
            <tr class="field form-group  col-sm-12">
              <th><%= f.label :"郵便番号(ハイフンなし)", class: "control-label" %></th>
              <td><%= f.text_field :post_code, autofocus: true, class:"form-control-static rounded-lg" %></td>
            </tr>

            <tr class="field form-group col-sm-12">
              <th><%= f.label :"住所", class: "control-label" %></th>
              <td><%= f.text_field :address, autofocus: true, class:"form-control-static rounded-lg" %></td>
            </tr>

            <tr class="field form-group col-sm-12">
              <th><%= f.label :"宛名", class: "control-label" %></th>
              <td><%= f.text_field :name, autofocus: true, class:"form-control-static name rounded-lg" %></td>
              <td class= text-right><%= f.submit "新規登録", class: "btn btn-success" %></div>
            </tr>
          <% end %>

          <table class="table table-bordered col-sm-10">
              <tr class="table-info">
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
              </tr>
            <% @deliverys.each do |delivery| %>
              <tr>
                <td><%= delivery.post_code %></td>
                <td><%= delivery.address %></td>
                <td><%= delivery.name %></td>
                <td class="d-flex justify-content-center">
                  <%= link_to "編集する", edit_delivery_path(delivery), class: "btn btn-success" %>
                  <%= link_to "削除する", delivery_path(delivery), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger ml-3" %>
                </td>
              </tr>
            <% end %>
          </table>
        </tbody>
      </div>
    </div>
  </div>
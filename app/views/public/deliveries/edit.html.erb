<div class="l-main_container">

<div>配送先編集</div>
  <div class="col-xs-11 col-xs-offset-1">
    <div classs="row">
      <%= form_with model: @delivery local: true do |f| %>

        <div class="field form-group col-sm-6">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-3 control-label" %>
          <%= f.text_field :post_code, autofocus: true, class:"col-sm-2 form-control-static" %>
        </div>

        <div class="field form-group col-sm-6">
          <%= f.label :"住所", class: "col-sm-3 control-label" %>
          <%= f.text_field :address, autofocus: true, class:"col-sm-5 form-control-static" %>
        </div>

        <div class="field form-group col-sm-6">
          <%= f.label :"宛名", class: "col-sm-3 control-label" %>
          <%= f.text_field :name, autofocus: true, class:"col-sm-2 form-control-static name" %>
          <div class= text-right><%= f.submit "変更内容を保存", class: "btn btn-success col-sm-2" %></div>
        </div>
      <% end %>
    </div>
  </div>
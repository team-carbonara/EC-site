<%= render 'layouts/errors' %>

<div class="l-main_container">
  <div class="row">
    <div class="offset-1 col-sm-11 m-3 pb-4">
      <div class="shadow p-2 mb-4 col-md-1 bg-light rounded-lg head-line text-center">ログイン</div>
      <div class="shadow p-2 ml-5 mb-5 col-md-2 bg-light rounded-lg head-line text-center">会員の方はこちらからログイン</div>
    </div>
    <thead>
      <div class="m-4 pb-4 mx-auto">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <table class="table table-borderless table-sm">
            <tr class="form-group">
              <th><%= f.label :"メールアドレス", class: "control-label align-text-bottom" %></th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"form-control-static ml-5 rounded-lg" %></td>
            </tr>

            <tr class="form-group">
              <th><%= f.label :"パスワード", class: "control-label align-text-bottom" %></th>
              <td><%= f.password_field :password, autocomplete: "current-password", class:"form-control-static ml-5 rounded-lg" %></td>
            </tr>

            <tr class="actions">
              <th></th>
              <td><%= f.submit "ログイン", class: "btn btn-primary ml-5 col-sm-8" %></td>
            </tr>
          </table>
        <% end %>
      </div>
    </thead>
    <tbody></br>
      <div class="col-xs-offset-1 col-sm-11 m-3 pb-4">
        <div class="shadow p-2 mb-4 col-md-2 bg-light rounded-lg head-line text-center">会員登録がお済みでない方</div>
        <p class="ml-5"><%= link_to "こちら" ,"/customers/sign_up "%>　から新規登録を行ってください。</p></br>
      </div>
    </tbody>
  </div>
</div>
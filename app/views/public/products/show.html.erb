<div class="l-main_container flex">
  <aside class="m-sidebar">
    <span class=“m-sidebar_title”>ジャンル検索</span>
    <%= render 'genre_search' %>
  </aside>
  <div class="row">
    <div class="product_detail">
      <div class="product_image"><%= attachment_image_tag(@product, :image) %></div>
      <div class="product_detail_item">
        <h2><%= @product.name %></h2>
        <p class="mt-3"><%= @product.description %></p>
        <p class="mt-5"><%= @product.add_tax_price.to_s(:delimited, delimiter:',') %>(税込)</p>
      </div>
<%
=begin %>
        <%= form_with model: [:admin, @product_order] do |f| %>
          <%= f.select :name, @quantity_array, { include_blank: '個数選択'} %>
          <%= f.submit 'カートに入れる' %>
        <% end %>
<%
=end %>
    </div>
  </div>
</div>
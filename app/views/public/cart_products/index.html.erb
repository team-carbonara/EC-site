  <div class="l-main_container">
        <div class="m-page_title">
          <h2 class="cart-puroduct_title">ショッピングカート</h2>
          <%= link_to 'カートを空にする', cart_products_path, method: :delete ,class: "cart_delete_btn"%>
        </div>
          <% if current_customer.cart_products.present? %>
        <table class="cart-puroduct_table">
          <tr class="cart-puroduct_table_row">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
          <% @cart_products.each do |cart_product| %>
          <%= form_with model: @cart_product, url: cart_product_path(cart_product.id),method: :PATCH,local:true  do |f| %>
          <tr class="cart-puroduct_table_row">
            <td><img class="cart-puroduct_image" src="" alt=""><%= cart_product.product.name %></td>
            <td><%= cart_product.product.price %></td>
            <td>
              <div class="select_design">
                <%= select_tag :quantity , options_for_select((1..50).to_a, :selected => cart_product.quantity ) %>
              </div>
                <%= f.hidden_field :customer_id, value: current_customer.id %>
                <%= f.hidden_field :product_id, value: cart_product.product.id %>
                <%= f.submit '変更', class: "cart-product_update_btn" %>
            </td>
            <td><%= total=cart_product.product.add_tax_price * cart_product.quantity %></td>

            <td><%= link_to '削除', cart_product_path(cart_product), method: :delete ,class: "cart_delete_btn"%></td>
          </tr>
            <% end %>
          <% end %>
        </table>
          <% else %>
          <div class="cart-product_other">
          カートには商品はありません
          </div>
          <% end %>

          <div class="cart-product_other">
            <%= link_to '買い物を続ける', products_path ,class: "cart-product_continue_btn"%>
            <div class="price-total">
              <span class="price-total_text">合計金額</span>
              <span class="price-total_value">
              <%= @total %>
              </span>
            </div>
          </div>

        <div>
          <%= link_to '情報入力に進む',new_order_path,class: "cart-product_info_btn"%>
        </div>
      </div>
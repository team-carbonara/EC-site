 <div class="l-main_container">
<% @cart_products.each do |cart| %>
  <div>
  <%= cart.product.name %> <!-- 商品名 -->
  <%= (cart.product.price).to_s(:delimited) %>円　<!-- 金額 -->
  <%= cart.quantity %>個 <!-- 個数 -->
  小計
  <%= cart.product.add_tax_price * cart.quantity %> <!-- 小計 -->
  </div>
<% end %>
<p>ご請求金額</p>
<%= @total.to_s(:delimited) %> <!-- お買い物の合計金額 -->
<p>お届け先</p>
<%= @order.post_code %>
<%= @order.address %>
<%= @order.name %>

<!-- ユーザーには注文確定ボタンだけ表示します -->
<%= form_with model: @order, url: orders_path,method: :POST ,local: true do |f| %>
  <%= f.hidden_field :customer_id, value: current_customer.id %>
  <%= f.hidden_field :name, value: @order.name %>
  <%= f.hidden_field :post_code, value: @order.post_code %>
  <%= f.hidden_field :address, value: @order.address %>
  <%= f.hidden_field :total_price, value: @total %>
  <%= f.hidden_field :status, value: "入金待ち" %>
  <%= f.hidden_field :payment_method, value: @payment_method%>
  <%= f.hidden_field :postage, value: @postage %>
  <%= f.hidden_field :production_status, value: "着手不可" %>
  <%= f.submit "注文を確定する" %>
<% end %>
</div>
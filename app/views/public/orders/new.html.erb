 <div class="l-main_container">
  <div class="m-page_title">
    <h2 class="cart-puroduct_title">注文情報入力</h2>
  </div>
      <%= form_with model: @order ,url: check_public_orders_path ,local: true   do |f| %>
  <div>
    <%= f.label :支払い方法, class: "" %>
    <%= f.radio_button :payment_method, :true, checked: true %>
    <%= f.label "クレジット" %>
    <%= f.radio_button :payment_method, :false %>
    <%= f.label "銀行" %>
  </div>
  <div>

    <h2>お届け先<h2>
      <div>
        <%= f.radio_button :address_number, 1 %> <!-- address_number と定義して1～3の番号を check に送ります -->
        <%= f.label :address_number_1, "ご自身の住所" %>
        <%= current_customer.post_code %>
        <%= current_customer.address %>
        <%= current_customer.last_name %><%= current_customer.first_name %>
      </div>
      <div>
      <%= f.radio_button :adress_number,2 %> 登録先から選択
      <%= f.collection_select :address_number_2 , current_customer.deliveries.all, :id, :address , :include_blank => "選択してください" %>


      </div>
      <div>
      <%= f.radio_button :adress_number,3 %>新しいお届け先
      <%= f.label :郵便番号（ハイフンなし）, class: "" %>
      <%= f.text_field :post_code, :placeholder => "0000000", size:"35", class: "product_name" %>

      <%= f.label :住所, class: "" %>
      <%= f.text_field :address_number_3, :placeholder => "東京都渋谷区代々木神園町0-0", size:"35", class: "product_name" %>

      <%= f.label :宛名, class: "" %>
      <%= f.text_field :name, :placeholder => "山田太郎", size:"35",value:"" %>
  </div>
      <%= f.hidden_field :name, value: current_customer.first_name  %>
      <%= f.hidden_field :post_code, value: current_customer.post_code %>
      <%= f.hidden_field :address, value: current_customer.address %>
      <%= f.hidden_field :status, value: 0 %>
      <%= f.hidden_field :total_price, value: @total %>
      <%= f.submit '確認画面へ進む', class: "cart-product_continue_btn" %>
      <% end %>
</div>

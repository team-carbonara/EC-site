<div class="l-main_container">
  <div class="m-page_title">
    <h2 class="cart-puroduct_title">注文履歴一覧</h2>
  </div>
  <table class="admin-orders_table">
    <tr class="admin-orders_table_row">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文<br class="u-sp">個数</th>
      <th>注文<br class="u-sp">ステータス</th>
    </tr>
    <% @orders.each do |order| %>
      <%# order.order_products.each do |item| %>
      <tr class="admin-orders_table_row">
        <td>
          <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at.strftime('%Y/%m/%d') %>　<br class="u-sp"><%= order.created_at.strftime('%H:%M:%S') %>
          <% end %>
        </td>
        <td>
          <%=link_to edit_admin_order_path(order.customer.id) do %>
            <%= "#{order.customer.last_name} #{order.customer.first_name}" %>
          <% end %>
        </td>
        <td><%= order.order_products.sum(:quantity) %></td>
        <td><%= order.status %></td>
      </tr>
      <%# end %>
    <% end %>
  </table>
  <%= paginate @orders %>
</div>

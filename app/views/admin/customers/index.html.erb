<div class="l-main_container">
  <div class="row">
    <div class="offset-1 col-md-10">
      <div class="shadow p-1 mb-5 col-md-2 bg-light rounded-lg head-line">会員一覧</div>
        <table class="table table-hover table-inverse col-sm-8">
          <tbody>
            <tr class="table-info">
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td>
                  <%= link_to admin_customer_path(customer) do %>
                  <%= customer.last_name %><%= customer.first_name %>
                  <% end %>
                </td>
                <td><%= customer.email %></td>
                <td>
                  <% if customer.withdrawal_status == true%>
                    <div class="text-secondary">退会</div>
                  <% else %>
                    <div class="text-success">有効</div>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
<%= paginate @customers %>

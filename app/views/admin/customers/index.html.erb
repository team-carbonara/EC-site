<div class="l-main_container">
  <h2 class="admin-title">会員一覧</h2>
  <table class="admin-product_table">
    <tr>
      <th>会員<br class="u-sp">ID</th>
      <th>氏名</th>
      <th>メール<br class="u-sp">アドレス</th>
      <th>ステータス</th>
    </tr>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td class="admin-product_table_name">
          <%= link_to admin_customer_path(customer) do %>
          <%= customer.last_name %><br class="u-sp"><%= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.withdrawal_status == true%>
            <div class="text-secondary">退会</div>
          <% else %>
            <div class="text-success">有効</div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<%= paginate @customers %>
</div>
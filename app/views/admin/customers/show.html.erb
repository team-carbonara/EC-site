
<div class="l-main_container">
  <h2 class="admin-title"><%= @customer.last_name %><%= @customer.first_name %>さんの<br class=u-sp>会員詳細</h2>
  <table class="cutomer-edit_table">
    <tr>
      <th>会員</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td>
        <%= @customer.last_name %>
        <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td>
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
      </td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.post_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.tel %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <% if @customer.withdrawal_status == true%>
          <div class="text-secondary">退会</div>
        <% else %>
          <div class="text-success">有効</div>
        <% end %>
      </td>
    </tr>
  </table>
  <div class="cutomer-edit_subtitle">
      <td><%= link_to "編集", edit_admin_customer_path(@customer), class: "customer-edit_btn" %></td>
</div>
<div class="cutomer-edit_subtitle">
            <td><%= link_to "注文履歴一覧", admin_orders_path, class: "customer-edit_btn" %></td>
</div>
</div>



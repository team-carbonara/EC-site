<div class="row">
  <div class="col-xs-offset-1 col-xs-11">
    <h2 class="head-line">管理者ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group col-xs-12">
        <%= f.label :"メールアドレス", class: "col-sm-5 control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-sm-6 form-control-static" %>
      </div>

      <div class="field form-group col-xs-12 mx-auto">
        <%= f.label :"パスワード", class: "col-sm-5 control-label mx-auto" %>
        <%= f.password_field :password, autocomplete: "current-password", class:"col-sm-6 form-control-static mx-auto" %>
      </div>

      <div class="actions col-4 mx-auto">
        <%= f.submit "ログイン", class: "btn btn-primary col-sm-12" %>
      </div>
    <% end %>
  </div>
</div>
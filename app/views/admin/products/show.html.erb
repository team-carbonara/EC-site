 <div class="l-main_container">
  <h3>商品詳細</h3>
  <div class="row">
    <div class="col-sm-4">
      <div class="admin_product_image"><%= attachment_image_tag(@product, :image, size: "300x217") %></div>
    </div>
    <div class="col-sm-7 offset-sm-1">
      <table class="admin_product_detail">
        <tr>
          <th>商品名</th>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @product.description %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @product.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <td><%= "#{@product.add_tax_price.to_s(:delimited, delimiter:',')} (#{@product.price.to_s(:delimited, delimiter:',')}) 円" %></td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @product.sale_status %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
      </table>
      <div class="col-sm-7 offset-sm-1 mt-3 mx-auto">
        <%= link_to '編集する', edit_admin_product_path(@product), class: "btn btn-success btn-lg" %>
      </div>
    </div>
  </div>
</div>
